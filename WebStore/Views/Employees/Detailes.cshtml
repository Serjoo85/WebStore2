@model Employee

@{
    ViewData["Title"] = "About our employees";
}
<div class="container">
    <table class="table">
        <tr>
            <th>Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Фамилия</th>
            <td>@Model.LastName</td>
        </tr>

        <tr>
            <th>Имя</th>
            <td>@Model.FirstName</td>
        </tr>

        <tr>
            <th>Отчество</th>
            <td>@Model.Patronymic</td>
        </tr>

        <tr>
            <th>Должность</th>
            <td>@Model.Position</td>
        </tr>
        <tr>
            <th>Зарплата</th>
            <td>@Model.Salary</td>
        </tr>
        <tr>
            <th>Возраст</th>
            <td>@Model.Age</td>
        </tr>

    </table>
    <hr />
    <p>
        <a asp-controller="Employees" asp-action="Index">Back to list</a>
    </p>
</div>