@model WebStore.Domain.ViewModels.Identity.LoginViewModel;
@{
    ViewBag.Title = "Login to the system";
}

<section id="form"><!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form"><!--login form-->
                    <h2>Login to your account</h2>
                    <form asp-action="Login" asp-route-ReturnUrl="@Model.ReturnUrl" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="Name"/>
                        <span asp-validation-for="UserName"></span>

                        <input asp-for="Password" placeholder="Password"/>
                        <span asp-validation-for="Password"></span>
                        
                        <span><input type="checkbox" class="checkbox" asp-for="RememberMe">
                            Keep me signed in
                        </span>
                        <button type="submit" class="btn btn-default">Login</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->
