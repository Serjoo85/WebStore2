@model IEnumerable<UserOrderViewModel>

@{
    Layout = "_UserProfileLayout";
    ViewBag.Title = "Orders";
}

@if (Model.Any())
{
    <table calss="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Date</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Sum</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @{
                var i = 1;
            }

            @foreach (var order in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@(order.Date.ToString())</td>
                    <td>@order.Address</td>
                    <td>@order.Phone</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You don't have orders.</p>
}


